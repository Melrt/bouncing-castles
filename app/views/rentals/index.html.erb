<div class="container">
  <h2 class="mt-3 text-center">My orders</h2>
  <div class="row">
    <% @rentals.each do |rental| %>
      <div class="col-sm-4 m-3">
        <div class="card" style="width: 18rem;">
          <%= cl_image_tag rental.castle.photo, width: 400, crop: :fill, class: 'card-img-top' %>
          <div class="card-body">
            <h5><%= rental.castle.name %></h5>
            <p>dates: <%= rental.starts_on %> > <%= rental.ends_on %>
            Status: <span class="badge badge-primary"><%= rental.status %></span></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
