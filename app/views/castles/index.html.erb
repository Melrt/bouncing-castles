<div class="container">
  <div class="container text-center">
    <div class="page-intro m-3">
      <h1>BOUNCY CASTLES</h1>
      <% if @castles.empty? %>
          <h5 class="m-5">There's no castle yet in this city!!</h5>
      <% else %>
        <p>Start planning your party with these bouncing castles available</p>
      </div>
      <div class="row">
        <% @castles.each do |castle| %>
          <div class="col-sm-6 col-md-4">
              <%=  link_to castle_path(castle), class: 'card-index-link' do %>
                <div class="castle-index-card">
                    <div class="castle-index-img">
                      <%= cl_image_tag castle.photo, aspect_ratio: 1, crop: :fill %>
                      <div class="castle-index-players"><i class="fas fa-running"></i> <%= castle.nb_players %>
                      </div>
                    </div>
                    <div class="castle-index-card-body card-index-padding">
                      <h5 class="castle-index-card-title"><%= castle.name.upcase %></h5>
                      <i class="fas fa-map-marker-alt"></i> <%= castle.address %> | <%= castle.day_price %>â‚¬ <small>/day</small>
                    </div>
                </div>
              <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

