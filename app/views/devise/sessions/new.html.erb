<div class="container container-sign-form">
  <div class="row">
    <div class="col-md-6 offset-md-3 mt-5 sing_up_form">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions btn-sign-field">
        <%= f.button :submit, "Log in", {:class=>"btn btn-primary"}%>
        <%= link_to "Cancel", root_path, {:class=>"btn btn-light"} %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
