<div class='wrapper'>
  <div class="banner d-flex align-items-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path "banner_2.png" %>);">
    <div class="container text-align">
      <div class="body-banner">
        <h1>TIGGER'S BOUNCE</h1>
        <p>Every cool party starts with a bounce</p>
        <%= link_to 'Find a castle', castles_path, class: 'btn btn-warning font-weight-bold' %>
      </div>
      <div class="connexion-bar">
        <% unless user_signed_in? %>
          <%= link_to "Log in", new_user_session_path, class: "btn"%>
          <%= link_to "Sign up", new_user_registration_path, class: "btn"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
