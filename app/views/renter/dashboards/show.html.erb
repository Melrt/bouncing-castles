<div class="container">
  <div class="row">
    <div class="col-sm col-lg-8 offset-lg-2">
      <div class="dashboard">
        <h2 class="mt-3 text-center">My castles' dashboard</h2>
        <h5 class="mt-3 text-center">Castles</h5>
        <ul class="list-group list-group-horizontal-sm ">
              <% @castles.each do |castle| %>
                <li class="list-group-item d-flex justify-content-between align-items-center m-1">
                  <%= castle.name %>
                  <span class="badge badge-primary badge-pill ml-1"><%= castle.rentals.count %></span>
                </li>
              <% end %>
        </ul>
        <h5 class="mt-3 text-center">Orders placed for my castles </h5>
        <% @castles.each do |castle| %>
          <% castle.rentals.each do |rental| %>
            <div class="notification-dashboard">
              <%= cl_image_tag rental.player.avatar, width: 150, crop: :fill, class: "avatar-large"%>
              <div class="notification-content">
                <p><small><%= rental.castle.name %></small></p>
                <p><%= rental.starts_on %> to <%= rental.ends_on %></p>
              </div>
              <div class="notification-status">
                <% if rental.status == 'accepted' %>
                  <span class="badge badge-infos color-success">order accepted</span>
                <% elsif rental.status == 'denied'%>
                  <span class="badge badge-infos color-deny">order denied</span>
                <% else %>
                  <span class="badge badge-infos"><%= rental.status %></span>
                <% end %>
              </div>
              <div class="notification-actions">
                <% if rental.status == 'pending' %>
                  <%= link_to accept_renter_rental_path(rental), method: :patch do %>
                    <i class="far fa-check-circle accept"></i>
                  <% end %>
                  <%= link_to deny_renter_rental_path(rental), method: :patch do %>
                    <i class="far fa-times-circle deny"></i>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>



