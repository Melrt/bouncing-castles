<div class="container">
  <div class="row">
    <div class="col-sm">
      <h2 class="mt-3 text-center">My castles' dashboard</h2>
      <h5 class="mt-3 text-center">Castles</h5>
      <ul class="list-group list-group-horizontal-sm ">
        <% @castles.each do |castle| %>
        <li class="list-group-item d-flex justify-content-between align-items-center m-1">
          <%= castle.name %>
          <span class="badge badge-primary badge-pill ml-1"><%= castle.rentals.count %></span>
        </li>
        <% end %>
      </ul>
      <h5 class="mt-3 text-center">Orders placed for my castles </h5>
      <div class="row">
        <% @castles.each do |castle| %>
        <% castle.rentals.each do |rental| %>
        <div class="col-sm-12">
          <div class="card m-1">
            <div class="p-2 d-flex justify-content-between align-items-center m-1">
              <strong><%= rental.castle.name %></strong>
              <span> <%= rental.starts_on %> to <%= rental.ends_on %></span>
              <span class="badge badge-infos"><%= rental.status %></span>
              <% if rental.status == 'pending' %>
              <div class="btn-group" role="group" aria-label="Basic example">
                <%= link_to 'Accept', accept_renter_rental_path(rental), method: :patch, class: 'btn btn-success mr-2'%>
                <%= link_to 'Deny', deny_renter_rental_path(rental), method: :patch, class: 'btn btn-warning'%>
              </div>
              <% end %>
            </div>
          </div>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
